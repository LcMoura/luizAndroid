<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameLayoutActivity">

    <ImageView
        android:id="@+id/imvImagemFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/luiz_carlos"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txvLuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:text="Luiz Carlos"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imvAndroidTopo"
        android:layout_width="76dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/android_moral"
        android:layout_gravity="right"/>

</FrameLayout>